{
	"name": "@ctx-core/dev-tools",
	"version": "8.3.54",
	"description": "ctx-core dev-tools",
	"keywords": [
		"ctx-core",
		"dev-tools"
	],
	"homepage": "https://github.com/ctx-core/dev-tools#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/dev-tools/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/dev-tools.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Brian Takita",
		"url": "https://briantakita.me",
		"email": "info+ctx-core-dev-tools@briantakita.me"
	},
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"./bin"
	],
	"types": "./index.d.ts",
	"bin": {
		"generate-index-js": "./bin/generate-index-js.js"
	},
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm run /^test:/",
		"test:types": "check-dts",
		"test:unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"disable:test:unit:coverage": "c8 pnpm test:unit"
	},
	"dependencies": {
		"@ctx-core/dir": "^8.2.195",
		"ctx-core": "^7.2.18",
		"readline": "^1.3.0",
		"tsx": "^4.15.2"
	},
	"devDependencies": {
		"@types/glob-stream": "^8.0.2",
		"c8": "^10.1.2",
		"check-dts": "^0.8.0",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false
}