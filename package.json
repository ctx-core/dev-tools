{
	"name": "@ctx-core/dev-tools",
	"version": "7.2.22",
	"description": "ctx-core dev-tools",
	"keywords": [
		"ctx-core",
		"dev-tools"
	],
	"homepage": "https://github.com/ctx-core/dev-tools#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/dev-tools/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/dev-tools.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js"
		},
		"./package.json": "./package.json"
	},
	"bin": {
		"generate_ctx_I_file": "bin/generate_ctx_I_file.mjs"
	},
	"scripts": {
		"build": "npm run compile",
		"clean": "rimraf lib && npm run clean:tsbuildinfo",
		"clean:tsbuildinfo": "rimraf tsconfig.tsbuildinfo && rimraf lib/**/*.d.ts",
		"compile": "npm run compile:source && npm run compile:declaration",
		"compile:source": "swc src --out-dir lib --copy-files --source-maps --config-file .swcrc",
		"compile:declaration": "npm run clean:tsbuildinfo && tsc --declaration --emitDeclarationOnly --declarationDir lib",
		"exec": "$@",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@ctx-core/cli-args": "^11.0.24",
		"fdir": "^5.2.0",
		"picomatch": "^2.3.1"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.136",
		"rimraf": "^3.0.2",
		"typescript": "next"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"svelte": "./lib/index.js",
	"sideEffects": false
}
