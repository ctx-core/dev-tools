{
	"name": "@ctx-core/dev-tools",
	"version": "8.2.39",
	"description": "ctx-core dev-tools",
	"keywords": [
		"ctx-core",
		"dev-tools"
	],
	"homepage": "https://github.com/ctx-core/dev-tools#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/dev-tools/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/dev-tools.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"./bin"
	],
	"types": "./index.d.ts",
	"bin": {
		"generate-index-ts": "./bin/generate-index-ts/index.sh"
	},
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm test-unit && check-dts",
		"test-unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test-unit-coverage": "c8 pnpm test-unit"
	},
	"dependencies": {
		"@ctx-core/cli-args": "^11.4.27",
		"@ctx-core/dir": "^8.2.28",
		"@ctx-core/queue": "^7.10.27",
		"readline": "^1.3.0",
		"tsx": "^4.5.0"
	},
	"devDependencies": {
		"@types/glob-stream": "^8.0.2",
		"c8": "^8.0.1",
		"check-dts": "^0.7.2",
		"tslib": "^2.6.2",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"sideEffects": false
}