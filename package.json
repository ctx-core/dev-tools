{
	"name": "@ctx-core/dev-tools",
	"version": "7.1.1",
	"description": "ctx-core dev-tools",
	"keywords": [
		"ctx-core",
		"dev-tools"
	],
	"homepage": "https://github.com/ctx-core/dev-tools#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/dev-tools/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/dev-tools/issues"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"bin": {
		"generate_ctx_I_file": "bin/generate_ctx_I_file.mjs"
	},
	"scripts": {
		"build": "npm run clean && npm run copy-mjs && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-mjs": "cd dist && echo \"module.exports = (async () => import('./index.js'))()\" > index.cjs",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@ctx-core/cli-args": "workspace:^10.0.16",
		"esm": "^3.2.25",
		"fdir": "^5.1.0",
		"picomatch": "^2.3.0"
	},
	"devDependencies": {
		"typescript": "^4.3.5"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	}
}
